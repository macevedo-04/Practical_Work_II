<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UFV_Conversor.PasswordRecoveryPage"
             Title="Password Recovery">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" Style="{StaticResource HeaderFrameStyle}">
            <Label Text="Password Recovery" Style="{StaticResource HeaderLabelStyle}" />
        </Frame>

        <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="20" VerticalOptions="Center">
            <Label Text="Enter your username to recover your password:"
                   FontSize="16" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <Entry x:Name="UsernameEntry" 
                   Placeholder="Enter your username" 
                   Style="{StaticResource EntryStyle}" />

            <Button Text="RECOVER PASSWORD" 
                    Style="{StaticResource ButtonStyle}"
                    Clicked="OnRecoverClicked" />

            <Button Text="Back to Login" 
                    Style="{StaticResource ButtonStyle}"
                    Clicked="OnBackClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>