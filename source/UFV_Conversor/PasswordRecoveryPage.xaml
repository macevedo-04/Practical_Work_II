<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UFV_Conversor.PasswordRecoveryPage"
             Title="Password Recovery"
             BackgroundColor="#d3d3d3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="20" VerticalOptions="Center">
            <Button x:Name="ExitButton"
                            Text="Exit"
                            BackgroundColor="Transparent"
                            TextColor="#000000"
                            HorizontalOptions="End"
                            Clicked="OnExitClicked"/>

            <BoxView HeightRequest="60"
                            BackgroundColor="#3B5A76"/>

            <Label Text="OOP Conversor"
                            FontSize="28"
                            TextColor="#ffffff"
                            HorizontalOptions="Center"
                            Margin="0,-50,0,30"/>
            <Label Text="Username"
                   FontSize="16" 
                   HorizontalOptions="Start"
                   Margin="0,0,0,10" />

            <Entry x:Name="UsernameEntry"
                   Placeholder="Enter your username" />

            <Label Text="New password"/>

            <Entry x:Name="NewPasswordEntry"
                   Placeholder="Enter your new password" 
                   IsPassword="True" />
            
            <Label Text="Confirm new password"/>
            <Entry x:Name="ConfirmPasswordEntry"
                   Placeholder="Confirm your new password" 
                   IsPassword="True" />

            <Button Text="RECOVER PASSWORD" 
                    Clicked="OnRecoverClicked" />

            <Button Text="Back to Login" 
                    Clicked="OnBackClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>