<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UFV_Conversor.ConversorPage"
             Title="Conversor"   
             BackgroundColor="#D3D3D3">
    
    <ScrollView>
        <VerticalStackLayout>
            <BoxView HeightRequest="60" BackgroundColor="#3B5A76" />
            <Label Text="OOP Conversor" FontSize="28" TextColor="White" HorizontalOptions="Center" Margin="0,-50,0,30" />

            <Entry Placeholder="Input" FontSize="18" Margin="20" />

            <Grid ColumnSpacing="10" RowSpacing="10" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Text="7" />
                <Button Grid.Row="0" Grid.Column="1" Text="8" />
                <Button Grid.Row="0" Grid.Column="2" Text="9" />
                <Button Grid.Row="0" Grid.Column="3" Text="DecimalToBinary" />

                <Button Grid.Row="1" Grid.Column="0" Text="4" />
                <Button Grid.Row="1" Grid.Column="1" Text="5" />
                <Button Grid.Row="1" Grid.Column="2" Text="6" />
                <Button Grid.Row="1" Grid.Column="3" Text="DecimalToTwoComplement" />

                <Button Grid.Row="2" Grid.Column="0" Text="1" />
                <Button Grid.Row="2" Grid.Column="1" Text="2" />
                <Button Grid.Row="2" Grid.Column="2" Text="3" />
                <Button Grid.Row="2" Grid.Column="3" Text="DecimalToOctal" />

                <Button Grid.Row="3" Grid.Column="0" Text="AC" />
                <Button Grid.Row="3" Grid.Column="1" Text="0" />
                <Button Grid.Row="3" Grid.Column="2" Text="-" />
                <Button Grid.Row="3" Grid.Column="3" Text="DecimalToHexadecimal" />

                <Button Grid.Row="4" Grid.Column="0" Text="A" />
                <Button Grid.Row="4" Grid.Column="1" Text="B" />
                <Button Grid.Row="4" Grid.Column="2" Text="C" />
                <Button Grid.Row="4" Grid.Column="3" Text="BinaryToDecimal" />

                <Button Grid.Row="5" Grid.Column="0" Text="D" />
                <Button Grid.Row="5" Grid.Column="1" Text="E" />
                <Button Grid.Row="5" Grid.Column="2" Text="F" />
                <Button Grid.Row="5" Grid.Column="3" Text="TwoComplementToDecimal" />
            </Grid>

            <Button Text="OctalToDecimal" Margin="20,10" />
            <Button Text="HexadecimalToDecimal" Margin="20,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>